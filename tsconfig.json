{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ES6",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src", "types", "css"]
}
